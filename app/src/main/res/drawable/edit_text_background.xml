<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado focado (borda mais destacada) -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="#4CAF50" /> <!-- Cor da borda ao focar -->
        </shape>
    </item>

    <!-- Estado normal (borda padrão) -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#CCCCCC" /> <!-- Cor da borda padrão -->
        </shape>
    </item>

</selector>
